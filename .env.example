# 站长账号配置
USERNAME=admin
PASSWORD=your_secure_password_here

# 存储配置 (选择其中一种)
NEXT_PUBLIC_STORAGE_TYPE=upstash
# NEXT_PUBLIC_STORAGE_TYPE=redis
# NEXT_PUBLIC_STORAGE_TYPE=kvrocks

# Upstash 配置
UPSTASH_URL=https://your-instance.upstash.io
UPSTASH_TOKEN=your_upstash_token_here

# Redis 配置
REDIS_URL=redis://your-redis-host:6379

# Kvrocks 配置
KVROCKS_URL=redis://your-kvrocks-host:6666

# 可选配置
SITE_BASE=https://your-domain.com
NEXT_PUBLIC_SITE_NAME=LunaTV Enhanced
ANNOUNCEMENT=欢迎使用 LunaTV Enhanced Edition

# 豆瓣代理配置
NEXT_PUBLIC_DOUBAN_PROXY_TYPE=direct
NEXT_PUBLIC_DOUBAN_IMAGE_PROXY_TYPE=direct

# 搜索配置
NEXT_PUBLIC_SEARCH_MAX_PAGE=5
NEXT_PUBLIC_FLUID_SEARCH=true

# 内容过滤
NEXT_PUBLIC_DISABLE_YELLOW_FILTER=false